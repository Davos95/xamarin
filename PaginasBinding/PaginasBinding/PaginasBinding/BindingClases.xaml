<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PaginasBinding.BindingClases">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding Nombre}"
                   FontSize="40" TextColor="Blue"
                   HorizontalOptions="FillAndExpand"/>
            <Label Text="{Binding Equipo}"
                   FontSize="30" TextColor="Red"
                   HorizontalOptions="FillAndExpand"/>
            <Image Source="{Binding Imagen}" WidthRequest="250" HeightRequest="250"/>
            <Label Text="{Binding Descripcion}" FontSize="15" TextColor="Orange" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>