<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BasesDatos.Views.ModificarDepartamento">
    <ContentPage.Content>
        <StackLayout Margin="0,30,0,0">
            <Label Text="Modificar Registro" TextColor="Green"
                   FontSize="30"
                HorizontalOptions="CenterAndExpand" />
            <Label Text="{Binding Departamento.Numero}" 
                   HorizontalOptions="FillAndExpand"/>
            <Entry Text="{Binding Departamento.Nombre}" Placeholder="Nombre"
                   HorizontalOptions="FillAndExpand"/>
            <Entry Text="{Binding Departamento.Localidad}" Placeholder="Localidad"
                   HorizontalOptions="FillAndExpand"/>
            <Button Text="Modificar departamento" HorizontalOptions="FillAndExpand"
                    Command="{Binding ModificarDepartamento}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>