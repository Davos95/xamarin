<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TiposAlerta.PaginaModal">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Ventana de tipo Modal"
                FontSize="35"
                HorizontalOptions="CenterAndExpand" />
            <Entry x:Name="txtDato" HorizontalOptions="FillAndExpand" />
            
            <Button x:Name="botonCerrar" Text="Cerrar ventana" TextColor="Red" HorizontalOptions="FillAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>